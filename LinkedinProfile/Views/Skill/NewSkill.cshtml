@model LinkedinProfile.Models.Skill

<div class="modal-header ">
    <h4 class="modal-title" id="myModalLabel">Yeni Deneyim Ekle</h4>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

</div>
<div class="modal-body ">
    <form id="newExperience" method="post" action="/Skill/AddSkill" enctype="multipart/form-data">
        <fieldset>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="userId" value="@ViewBag.UserId"/>
            <div class="form-group row">
                <label class="col-md-3 col-3 text-right control-label">Yetenek: </label>
                <select class="form-control col-md-6 col-4 " id="skillId" name="skillId" required>

                    @if (ViewData["SkillsList"] != null)
                    {
                        <option></option>
                        foreach (var item in ViewData["SkillsList"] as List<Skill>)
                        {
                            <option value="@item.SkillId">@item.SkillName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group ">
                <div class="float-right ml-2">
                    <button class=" btn btn-danger btnCancel" data-dismiss="modal" role="button">İptal</button>

                    <input type="submit" style="margin-left:3px" value="Kaydet" class="btn btn-primary" />
                </div>
            </div>
        </fieldset>
    </form>
</div>

<script type="text/javascript">

    if ('@TempData["Message"]'.length > 0) {
        var data = '@TempData["Message"]';
        toastr.options = { "positionClass": "toast-top-center" };
        toastr.success(' ' + data + ' ', '', { timeOut: 1000 });
    }

    if ('@TempData["ErrorMessage"]'.length > 0) {
        var data = '@TempData["ErrorMessage"]';
        toastr.options = { "positionClass": "toast-top-center" };
        toastr.error(' ' + data + ' ', '', { timeOut: 1000 });
    }

</script>